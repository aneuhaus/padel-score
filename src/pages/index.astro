---

import Home from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import ScoreboardTestBed from "../components/ScoreboardTestBed";

import data from "../dictionaries/index/_data.js";

import '../styles/Scoreboard.scss'

const lang = "en";

const content = {
  ...data["base"],
};


---

<Home lang={lang}>
  <main class="centered">
    <h1>{content["title"]}</h1>
    <p>{content["description"]}</p>

    <ScoreboardTestBed client:only/>

    <Footer
      disclamer={content["copyrights:disclaimer"]}
      linkedin={content["linkedin:title"]}
      linkedinLabel={content["linkedin:label"]}
      linkedinLink="https://www.linkedin.com/in/aneuhaus/"
      _label={content["love:label"]}
      _made={content["love:made"]}
      _with={content["love:with"]}
      _emoji={content["love:emoji"]}
      _link={content["love:link"]}
      _title={content["love:title"]}
    />
  </main>
</Home>
